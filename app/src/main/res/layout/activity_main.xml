<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    tools:context="com.example.andrewpirkle.oldnorsevocab.MainActivity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banner"
        android:id="@+id/textView"
        android:textColorLink="@android:color/holo_red_dark"
        android:textColor="@android:color/holo_red_dark" />

    <Space
        android:layout_weight=".5"
        android:layout_height="0dp"
        android:layout_width="wrap_content" />

    <Button
        android:text="@string/oldnorse_bttn"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/oldnorse_button"
        android:onClick="nav2Activity" />
    <Button
        android:text="@string/swedish_bttn"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/swedish_button"
        android:onClick="nav2Activity" />


</LinearLayout>
